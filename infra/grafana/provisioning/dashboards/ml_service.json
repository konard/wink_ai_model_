{
  "dashboard": {
    "title": "ML Service Metrics",
    "uid": "ml_service_metrics",
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 1,
    "refresh": "5s",
    "panels": [
      {
        "id": 1,
        "title": "Inference Latency (Percentiles)",
        "type": "graph",
        "gridPos": {"x": 0, "y": 0, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "histogram_quantile(0.50, sum(rate(ml_inference_duration_seconds_bucket[5m])) by (le))",
            "legendFormat": "p50",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.95, sum(rate(ml_inference_duration_seconds_bucket[5m])) by (le))",
            "legendFormat": "p95",
            "refId": "B"
          },
          {
            "expr": "histogram_quantile(0.99, sum(rate(ml_inference_duration_seconds_bucket[5m])) by (le))",
            "legendFormat": "p99",
            "refId": "C"
          }
        ],
        "yaxes": [
          {"format": "s", "label": "Latency"}
        ]
      },
      {
        "id": 2,
        "title": "Request Rate",
        "type": "graph",
        "gridPos": {"x": 12, "y": 0, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "sum(rate(ml_requests_total[5m])) by (endpoint)",
            "legendFormat": "{{endpoint}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "reqps", "label": "Requests/sec"}
        ]
      },
      {
        "id": 3,
        "title": "Error Rate",
        "type": "graph",
        "gridPos": {"x": 0, "y": 8, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "sum(rate(ml_errors_total[5m])) by (endpoint)",
            "legendFormat": "{{endpoint}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "short", "label": "Errors/sec"}
        ]
      },
      {
        "id": 4,
        "title": "Active Requests",
        "type": "stat",
        "gridPos": {"x": 12, "y": 8, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "ml_active_requests",
            "refId": "A"
          }
        ]
      },
      {
        "id": 5,
        "title": "Content Feature Scores",
        "type": "graph",
        "gridPos": {"x": 0, "y": 16, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "avg(ml_content_score{category=\"violence\"})",
            "legendFormat": "Violence",
            "refId": "A"
          },
          {
            "expr": "avg(ml_content_score{category=\"gore\"})",
            "legendFormat": "Gore",
            "refId": "B"
          },
          {
            "expr": "avg(ml_content_score{category=\"profanity\"})",
            "legendFormat": "Profanity",
            "refId": "C"
          }
        ]
      },
      {
        "id": 6,
        "title": "Rating Distribution",
        "type": "piechart",
        "gridPos": {"x": 12, "y": 16, "w": 6, "h": 8},
        "targets": [
          {
            "expr": "sum(ml_rating_distribution) by (rating)",
            "legendFormat": "{{rating}}",
            "refId": "A"
          }
        ]
      },
      {
        "id": 7,
        "title": "Average Scenes per Script",
        "type": "stat",
        "gridPos": {"x": 18, "y": 16, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "avg(ml_scenes_total)",
            "refId": "A"
          }
        ]
      }
    ]
  }
}
